<div class="container" style="margin-top: 5vh;">
  <h1 class="text-center border-bottom pb-3 display-4 mx-auto mb-0"><%- pageTitle -%></h1>

  <div class="mt-5 w-50 mx-auto">
    <form class="form-group d-none" id="add-user-form">
      <div class="form-group row">
        <label for="name-input" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name-input" name="name-input">
        </div>
      </div>
      <div class="form-group row">
        <label for="pass-input" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="pass-input" name="pass-input">
        </div>
      </div>
      <fieldset class="form-group">
        <div class="row">
          <legend class="col-form-label col-sm-2 pt-0">Type</legend>
          <div class="col-sm-10 pl-5">
            <div class="form-check d-inline-block mr-3">
              <input class="form-check-input mt-1" type="radio" name="gridRadios" id="grid-standard" value="standard"
                checked>
              <label class="form-check-label" for="grid-standard">
                Standard
              </label>
            </div>
            <div class="form-check d-inline-block mr-3">
              <input class="form-check-input mt-1" type="radio" name="gridRadios" id="grid-admin" value="admin">
              <label class="form-check-label" for="grid-admin">
                Admin
              </label>
            </div>
          </div>
        </div>
      </fieldset>
      <div class="form-group row">
        <div class="col-sm-2">Permissions</div>
        <div class="col-sm-10 pl-5">
          <div class="form-check mb-1">
            <input class="form-check-input mt-1" type="checkbox" id="check-site" data-value="content">
            <label class="form-check-label" for="check-site">
              Site
            </label>
          </div>
          <div class="form-check mb-1">
            <input class="form-check-input mt-1" type="checkbox" id="check-gallery" data-value="gallery">
            <label class="form-check-label" for="check-gallery">
              Gallery
            </label>
          </div>
          <div class="form-check mb-1">
            <input class="form-check-input mt-1" type="checkbox" id="check-mail" data-value="messages">
            <label class="form-check-label" for="check-mail">
              Mail
            </label>
          </div>
          <div class="form-check mb-1">
            <input class="form-check-input mt-1" type="checkbox" id="check-users" data-value="users">
            <label class="form-check-label" for="check-users">
              Users
            </label>
          </div>
        </div>
      </div>
      <div class="d-block text-center">
        <button class="bg-transparent btn btn-dark text-dark" type="submit" onclick="uploadValid(event)">add</button>
        <button id="btnCancelAddPic" class="bg-transparent btn text-dark"
          onclick="cancelAddPic(event)">cancel</button>
      </div>
    </form>
    <button class="mx-auto d-block bg-transparent btn btn-dark text-dark" id="add-user-btn"
      onclick="openUserForm(event)">Add
      User<i class="fas fa-user-plus ml-2"></i></button>
  </div>

  <table class="table table-dark" style="margin: 8vh 0 20vh;">
    <thead>
      <tr class="table-secondary table-active">
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
        <th scope="col" style="width: 40%;">Permissions</th>
      </tr>
    </thead>
    <tbody>
      <% users.filter(user => user.name !== 'admin').forEach((user, index) => { %>
        <tr>
          <th><%- index + 1 -%></th>
          <td><%- user.name -%></td>
          <td><%- user.type -%></td>
          <td><%- (user.permissions.length === 4) ? 'All' : user.permissions -%></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>