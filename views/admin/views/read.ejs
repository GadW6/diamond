  <div class="container" style="margin-top: 5vh;">
    <a href="/admin/messages" class="bg-gray-300 btn m-3 position-absolute px-4">
      <i class="fa fa-angle-left font-weight-bold"></i>
    </a>
    <h1 class="text-center border-bottom pb-3 display-4 mx-auto mb-0"><%- pageTitle -%></h1>

    <div class="main-letter my-5 p-5 border border-dark rounded-pill">
      <div class="title-letter border-bottom pb-3 m-5">
        <section>
          <h5 class="d-inline-block">From:<strong class="ml-3"><%- mail.name -%><span
                class="ml-2">(<%- mail.email -%>)</span></strong></h5>
          <button id="delete-mail"
            class="d-inline-block float-right position-relative bg-transparent rounded-circle border"
            style="height: 50px; width: 50px; top: -50px; right: 30px;"><i
              class="fas fa-trash-alt position-absolute text-dark" style="top: 13px; left: 15px; font-size: 22px;"
              onclick="deleteBtn(event)"></i></button>
        </section>
        <section>
          <h5 class="d-inline-block">To:<strong class="ml-3">Me</strong></h5>
          <h5 class="d-inline-block float-right">At:<strong
              class="ml-3"><%- ((mail._receivedAt.getHours() < 10) ? ('0' + mail._receivedAt.getHours()) : mail._receivedAt.getHours()) + ':' + ((mail._receivedAt.getMinutes() < 10) ? ('0' + mail._receivedAt.getMinutes()) : mail._receivedAt.getMinutes()) + '\xa0\xa0' + mail._receivedAt.getDate() + '/' + (mail._receivedAt.getMonth() + 1) -%></strong>
          </h5>
        </section>
      </div>
      <div class="body-letter m-5">
        <%- mail.body -%>
      </div>
    </div>
