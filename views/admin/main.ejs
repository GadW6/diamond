<%- include('./includes/head') -%>
<!-- Page Glogal Scope -->

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('./includes/sidebar') %>
        <!-- End Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <div id="content">

                <!-- Navbar -->
                <%- include('./includes/navbar') -%>

                <!-- End Navbar -->

                <div class="container-fluid">
                    <!-- ////////////////////////////////////////// -->
                    <!-- ///////// Page Content Begins /////////// -->
                    <div class="row inbox-wrapper">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <%- (typeof slots !== 'undefined') ? include('./views/' + page, {slots}) : include('./views/' + page) -%>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ///////// Page Content Ends /////////// -->
                    <!-- ////////////////////////////////////////// -->
                </div>

            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Weintraub Familly <%- date.getFullYear() -%> </span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include('./general/modal', logoutModal) -%>

    <% if(typeof modals != 'undefined' && Object.entries(modals).length > 0) Object.entries(modals).forEach(([key, value]) => { %>
        <%- include('./general/modal', modals[key]) -%>
    <% }) %>

    <%- include('./includes/foot') -%>